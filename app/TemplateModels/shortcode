<?php

use Wordrobe\Entity\Shortcode;

$shortcodes['{KEY}'] = new Shortcode('{KEY}', function($atts, $content) {
  /*
   * The following code is just an example.
   * Override it to define your own shortcode's logic.
   */

  $attributes = '';

  foreach ($atts as $prop => $value) {
    $attributes .= ' ' . $prop . '="' . $value . '"';
  }

  return '<div' . $attributes .  '>' . do_shortcode($content) . '</div>';
});
