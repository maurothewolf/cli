<?php

namespace {NAMESPACE}\Entity;

use Wordrobe\Feature\EntityInterface;

/**
 * Class Entity
 * @package {NAMESPACE}\Entity
 */
class Entity implements EntityInterface
{
  /**
   * @var string $title
   */
  private $title;

  /**
   * @var string $content
   */
  private $content;

  /**
   * @var string $url
   */
  private $url;

  /**
   * Entity's constructor
   * @param string $title
   * @param string $content
   * @param string $url
   * @param mixed ...$params
   */
  public function __construct($title, $content, $url, ...$params)
  {
    $this->title = $title;
    $this->content = $content;
    $this->url = $url;
  }

  /**
   * Entity's title getter
   */
  public function getTitle()
  {
    return $this->title;
  }

  /**
   * Entity's content getter
   */
  public function getContent()
  {
    return $this->content;
  }

  /**
   * Entity's url getter
   */
  public function getUrl()
  {
    return $this->url;
  }
}
