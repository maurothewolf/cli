#!/usr/bin/env php
<?php

$autoload_paths = [__DIR__ . '/../vendor/autoload.php', __DIR__ . '/../../../autoload.php'];
foreach ($autoload_paths as $filepath) {
  if (file_exists($filepath)) {
    require_once $filepath;
    break;
  }
}
$wordrobe_paths = [__DIR__ . '/../app/Wordrobe.php', __DIR__ . '/../wordrobe/cli/app/Wordrobe.php'];
foreach ($wordrobe_paths as $filepath) {
  if (file_exists($filepath)) {
    require_once $filepath;
    break;
  }
}
