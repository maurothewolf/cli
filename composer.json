{
  "name": "wordrobe/cli",
  "type": "library",
  "description": "Boosting development CLI for Wordpress",
  "authors": [
    {
      "name": "Andrea 'Fiad' Fiadone",
      "email": "andrea.fiadone@purplenetwork.it",
      "homepage": "http://www.purplenetwork.it",
      "role": "Developer"
    }
  ],
  "bin": [
    "bin/wordrobe"
  ],
  "require": {
    "php": "^7.1",
    "symfony/console": "4",
    "composer/composer": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "Wordrobe\\": "app/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^0.9.2"
  },
  "scripts": {
    "code-review": "vendor/bin/phpstan analyse app/Builder app/Command app/Entity app/Helper app/Config.php app/Wordrobe.php"
  }
}
