{
  "name": "wordrobe/cli",
  "description": "Boosting development CLI for Wordpress",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Andrea 'Fiad' Fiadone",
      "email": "andrea.fiadone@purplenetwork.it",
      "homepage": "http://www.purplenetwork.it",
      "role": "Developer"
    }
  ],
  "bin": [
    "bin/wordrobe"
  ],
  "require": {
    "php": "^7.1",
    "symfony/console": "4",
    "composer/composer": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "Wordrobe\\": "app/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^0.9.2"
  },
  "scripts": {
    "code-review": "vendor/bin/phpstan analyse -l 7 -c phpstan.neon app/*.php app/Builder app/Command app/Entity app/Helper app/ThemeEntity app/TemplateModels"
  },
  "extra": {
    "hooks": {
      "pre-commit": "code-review"
    }
  }
}
